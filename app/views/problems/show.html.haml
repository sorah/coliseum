%p#notice= notice

- content_for(:title) { "Problem: #{@problem.title}"}

%section.problem
  %header
    %h2= @problem.title
  %section.body= @problem.body

%section.tests
  %header
    %h3 Tests
    - @problem.test_examples.each_with_index do |test, index|
      %section.test
        %h4 Test ##{index.succ}
        .block.input
          %h5 Input
          %pre.code= test.input
        .block.tester
          %h5 Tester
          %pre.code= test.tester

%section.submit

%section.submissions

- if current_user.try(:staff)
  %p= link_to 'Edit', edit_problem_path(@problem)

%p= link_to 'Back', problems_path
